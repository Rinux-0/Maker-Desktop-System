config SLE_UART_BUS
    int
    prompt "Set the UART BUS of the currrent sample."
    default 0
    depends on ENABLE_KEYPAD_1V8_SAMPLE
    help
        This option means the UART BUS of the currrent sample.

config UART_TXD_PIN
    int
    prompt "Choose UART TXD pin."
    depends on ENABLE_KEYPAD_1V8_SAMPLE
    default 17

config UART_RXD_PIN
    int
    prompt "Choose UART RXD pin."
    depends on ENABLE_KEYPAD_1V8_SAMPLE
    default 18

choice
    prompt "Select sle uart type"
    default SAMPLE_SUPPORT_SLE_UART_SERVER_1V8
    config SAMPLE_SUPPORT_SLE_UART_SERVER_1V8
        bool "Enable SLE UART Server sample."
    config SAMPLE_SUPPORT_SLE_UART_CLIENT_1V8
        bool "Enable SLE UART Client sample."
endchoice


config SUPPORT_SLE_PERIPHERAL
    bool
    default y if (SAMPLE_SUPPORT_SLE_UART_SERVER_1V8)


config SUPPORT_SLE_CENTRAL
    bool
    default y if (SAMPLE_SUPPORT_SLE_UART_CLIENT_1V8)
