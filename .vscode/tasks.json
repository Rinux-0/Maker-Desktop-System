{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "host backend",
			"type": "shell",
			"command": "cd ${workspaceFolder}/host/backend ; python main.py"
		},
		{
			"label": "host frontend (npm install)",
			"type": "shell",
			"command": "cd ${workspaceFolder}/host/frontend ; npm install"
		},
		{
			"label": "host frontend (npm run build)",
			"type": "shell",
			"command": "cd ${workspaceFolder}/host/frontend ; npm run build"
		},
		{
			"label": "kconfig menu",
			"type": "shell",
			"linux": {
				"command": "${workspaceFolder}/.venv/bin/python",
				"args": [
					"${workspaceFolder}/slave/sdk/bearpi-pico_h3863/build.py",
					"menuconfig",
					"ws63-liteos-app"
				],
				"options": {
					"cwd": "${workspaceFolder}/slave/sdk/bearpi-pico_h3863"
				}
			}
		},
		{
			"label": "kconfig gui",
			"type": "shell",
			"linux": {
				"command": "${workspaceFolder}/.venv/bin/python",
				"args": [
					"${workspaceFolder}/patch/huawei.cfbb-kconfig-0.0.1/configHandler/show_config.py",
					"config.in ws63 acore ws63-liteos-app ./build/config/target_config/ws63/menuconfig/acore",
					"guiconfig"
				],
				"options": {
					"cwd": "${workspaceFolder}/slave/sdk/bearpi-pico_h3863"
				}
			}
		},
		{
			"label": "rebuild",
			"type": "shell",
			"linux": {
				"command": "${workspaceFolder}/.venv/bin/python",
				"args": [
					"./build.py",
					"-c",
					"-release",
					"ws63-liteos-app"
				],
				"options": {
					"cwd": "${workspaceFolder}/slave/sdk/bearpi-pico_h3863"
				}
			}
		},
		{
			"label": "burn",
			"type": "shell",
			"linux": {
				"command": "wine",
				"args": [
					"\"${HOME}/.wine/drive_c/Program Files/BurnTool_H3863/BurnTool.exe\""
				],
				"options": {
					"cwd": "${workspaceFolder}/slave/sdk/bearpi-pico_h3863/output/ws63/fwpkg/ws63-liteos-app"
				}
			}
		},
		{
			"label": "qcom",
			"type": "shell",
			"linux": {
				"command": "wine",
				"args": [
					"\"${HOME}/.wine/drive_c/Program Files/QCOM/QCOM_V1.6.exe\""
				]
			}
		},
		{
			"label": "chmod_com",
			"type": "shell",
			"linux": {
				"command": "zsh ${workspaceFolder}/patch/chmod_com.sh"
			}
		}
	]
}
