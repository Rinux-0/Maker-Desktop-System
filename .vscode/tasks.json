	"version": "2.0.0",
	"tasks": [
		{
			"label": "menu config",
			"type": "shell",
			"icon": {
				"id": "tools",
				"tooltip": "Ⓜ️"
			},
			"linux": {
				"command": "/bin/python",
				"args": [
					"./build.py",
					"menuconfig",
					"ws63-liteos-app"
				],
				"options": {
					"cwd": "${workspaceFolder}"
				}
			}
		},
		{
			"label": "gui config",
			"type": "shell",
			"icon": {
				"id": "tools",
				"tooltip": "⚙️"
			},
			"linux": {
				"command": "/bin/python",
				"args": [
					"./huawei.cfbb-kconfig-0.0.1/configHandler/show_config.py",
					"config.in ws63 acore ws63-liteos-app build/config/target_config/ws63/menuconfig/acore",
					"guiconfig"
				],
				"options": {
					"cwd": "${workspaceFolder}"
				}
			}
		},
		{
			"label": "rebuild",
			"type": "shell",
			"icon": {
				"id": "package",
				"tooltip": ""
			},
			"linux": {
				"command": "/bin/python",
				"args": [
					"./build.py",
					"-c",
					"-release",
					"ws63-liteos-app"
				],
				"options": {
					"cwd": "${workspaceFolder}"
				}
			}
		},
		{
			"label": "burn",
			"type": "shell",
			"icon": {
				"id": "arrow-down",
				"tooltip": ""
			},
			"linux": {
				"command": "wine",
				"args": [
					"\"/home/rinux/.wine/drive_c/Program Files/BurnTool_H3863/BurnTool.exe\""
				],
				"options": {
					"cwd": "${workspaceFolder}/output/ws63/fwpkg/ws63-liteos-app" // 方便选包
				}
			}
		},
		{
			"label": "qcom",
			"type": "shell",
			"icon": {
				"id": "eye",
				"tooltip": ""
			},
			"linux": {
				"command": "wine",
				"args": [
					"\"/home/rinux/.wine/drive_c/Program Files/QCOM/QCOM_V1.6.exe\""
				],
				"options": {
					"cwd": "/home/rinux"
				}
			}
		},
		{
			"label": "chmod_com",
			"type": "shell",
			"icon": {
				"id": "request-changes",
				"tooltip": ""
			},
			"linux": {
				"command": "echo \"Rinux\" | sudo -S zsh /home/rinux/_script/chmod_com.sh",
				"args": [],
				"options": {
					"cwd": "/home/rinux"
				}
			}
		}
	]
